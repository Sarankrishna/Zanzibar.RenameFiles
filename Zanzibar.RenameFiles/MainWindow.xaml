<Window x:Class="Zanzibar.RenameFiles.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Numbering the files" Height="140" Width="700">
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" Grid.Row="0" >Select the folder</Label>
        <TextBox Grid.Column="1" Grid.Row="0" Name="txtDirectoryName" HorizontalAlignment="Left" Margin="5"  VerticalAlignment="Top" Width="450"/>
        <Button Name="cmdSelectFolder" Content="..." Width="75" Grid.Column="2" Grid.Row="0" Click="cmdSelectFolder_Click"/>
        
        <StackPanel Grid.ColumnSpan="3" Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
            <Button Name="cmdRename" Content="Rename" Width="150" Grid.Column="2" Grid.Row="0" Margin="5" Click="cmdRename_Click" />
            <Button Name="cmdClose" Content="Close" Width="150" Grid.Column="2" Grid.Row="0" Margin="5" Click="cmdClose_Click" />
        </StackPanel>
        
    </Grid>
</Window>
